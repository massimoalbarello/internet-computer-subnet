load("@rules_rust//rust:defs.bzl", "rust_doc_test", "rust_library", "rust_test")
load("//bazel:canisters.bzl", "rust_canister")

package(default_visibility = ["//visibility:public"])

DEPENDENCIES = [
    "//rs/rust_canisters/dfn_core",
    "@crate_index//:rand_0_8_4",
    "@crate_index//:rand_pcg",
    "@crate_index//:serde",
    "@crate_index//:serde_json",
]

DEV_DEPENDENCIES = [
    "//rs/rust_canisters/canister_test",
    "//rs/test_utilities",
    "//rs/types/types",
]

rust_library(
    name = "memory_test",
    srcs = glob(["src/**"]),
    crate_name = "memory_test",
    version = "0.1.0",
    deps = DEPENDENCIES,
)

rust_canister(
    name = "memory_test_canister",
    srcs = ["src/main.rs"],
    deps = DEPENDENCIES,
)

rust_test(
    name = "memory_test_test",
    crate = ":memory_test",
    deps = DEPENDENCIES + DEV_DEPENDENCIES,
)

rust_test(
    name = "memory_test_integration_test",
    srcs = ["test/test.rs"],
    data = [
        ":memory_test_canister",
        "//rs/canister_sandbox",
        "//rs/canister_sandbox/sandbox_launcher",
    ],
    env = {
        "CARGO_MANIFEST_DIR": "rs/rust_canisters/memory_test",
        "MEMORY_TEST_CANISTER_WASM_PATH": "$(rootpath :memory_test_canister)",
        "LAUNCHER_BINARY": "$(rootpath //rs/canister_sandbox/sandbox_launcher)",
        "SANDBOX_BINARY": "$(rootpath //rs/canister_sandbox)",
    },
    flaky = True,
    deps = DEPENDENCIES + DEV_DEPENDENCIES,
)

rust_doc_test(
    name = "memory_test_doc_test",
    crate = ":memory_test",
)
